	<bean id="FTPSystemFactory" class="kr.co.warebridge.repository.FTPSystemFactory" 
		c:host="#{appInfo.ftpHost}"
		c:port="#{appInfo.ftpPort}"
		c:user="#{appInfo.ftpSystemFolder}"
		c:password="#{appInfo.ftpPassword}"
		c:passiveMode="true"
		c:encoding="UTF-8"
		c:fileType="#{T(org.apache.commons.net.ftp.FTP).BINARY_FILE_TYPE}"
		c:timeout="#{1000*60}"
	/>
	
	<bean id="ftpSystemPool" class="org.apache.commons.pool2.impl.GenericObjectPool">
		<constructor-arg name="factory" ref="FTPSystemFactory" />
		<constructor-arg name="config">
			<bean class="org.apache.commons.pool2.impl.GenericObjectPoolConfig" 
				p:maxTotal="#{appInfo.ftpMaxTotal}"
				p:maxIdle="#{appInfo.ftpMaxIdle}"
				p:maxWaitMillis="#{appInfo.ftpMaxWait}"
				p:testOnBorrow="true"
			/>
		</constructor-arg>
	</bean>
</beans>
